@model HastaneRez.Models.Doctor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>Bu Kaydı silmek istediğinizden emin misiniz?</h3>
<div>

    <dl class="row">
        <dt class="col-sm-2">
            Doktor Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoctorName)
        </dd>
        <dt class="col-sm-2">
            Çalışma Saatleri
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calisma)
        </dd>
        <dt class="col-sm-2">
            Resim
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            Poliklinik
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Kayıt Listesi</a>
    </form>
</div>
</div>
